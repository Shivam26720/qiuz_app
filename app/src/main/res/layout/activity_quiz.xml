<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:layout_height="match_parent"
    tools:context=".Quiz_Activity">

    <TextView
        android:id="@+id/Totalquestion"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:hint="@string/totalquestion"
        android:textColorHint="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:id="@+id/question"
        android:textStyle="bold"
        android:text="This is the question"
        android:layout_above="@+id/multplechoice"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/multplechoice"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/Ansfirst"
            android:id="@+id/optionA"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/Anssecond"
            android:id="@+id/optionB"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/Ansthird"
            android:id="@+id/optionC"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="@string/Ansfourth"
            android:id="@+id/optionD"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:id="@+id/submitbutton"
        android:backgroundTint="@color/teal_700"
        android:text="@string/btn"
        android:layout_below="@+id/multplechoice"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>